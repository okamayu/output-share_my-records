.record-link
  = link_to '記録する', '/records/new'
.records-content
  - @records.each do |record|
    .kakomi-tape1
      .record-content
        《問題点・解決したいこと》
        %br/
        = record.content1
      .record-content
        《調べたこと・仮説》
        %br/
        = record.content2
      .record-content
        《結果・学んだこと》
        %br/
        = record.content3
      .record-date
        記録日：#{record.created_at}
      .record-link2
        = link_to '編集', "/records/#{record.id}/edit"
        = link_to '削除', "/records/#{record.id}/", method: :delete
- @posts.each do |post|
  .content
    .content__left
    .content__right
      .content__right__top
        = link_to post.title, post_path(post.id), class: "content__right__top--title"
      .content__right__bottom
        .content__right__bottom--userName
          %li.icon
            .fas.fa-user
          = post.user.nickname
          %li.icon-likes
            .fas.fa-heart
              = post.likes.count
          .content__right__bottom--date
            = post.created_at
= paginate(@posts)
